<% provide(:title, 'Edit user') %>
<% provide(:button_text, '更新する') %>
<% provide(:url, user_path) %><%# new.html.erbに合わせる %>
<h1>ユーザ情報更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class = "gravatar_edit">
      <%= gravatar_for @user %>
      <%# target="_blank" で新しいタブで開く %>
      <%# rel="noopener"で、リンク先のhtmlでwindowが使える問題を回避 %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener">変更</a>
    </div>
  </div>
</div>
